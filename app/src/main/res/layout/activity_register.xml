<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- LinearLayout sebagai kontainer utama dengan orientasi vertikal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/primary">

        <!-- RelativeLayout sebagai kontainer untuk menempatkan TextView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TextView sebagai judul halaman register -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="REGISTER"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

    <!-- CardView sebagai kontainer untuk elemen-elemen input -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-190dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white">

        <!-- LinearLayout sebagai kontainer utama elemen input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EditText untuk input username -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="Username"
                android:textColor="@color/black"
                android:textColorHint="@color/primary"
                android:backgroundTint="@color/primary"
                android:padding="28dp"
                android:drawableStart="@drawable/baseline_person_24"
                android:drawablePadding="20dp" />

            <!-- EditText untuk input password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/primary"
                android:backgroundTint="@color/primary"
                android:padding="28dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="20dp" />

            <!-- EditText untuk mengulangi password -->
            <EditText
                android:id="@+id/etRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPassword"
                android:hint="Ulangi Password"
                android:textColor="@color/black"
                android:textColorHint="@color/primary"
                android:backgroundTint="@color/primary"
                android:padding="28dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="20dp" />

            <!-- Button untuk melakukan registrasi -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="DAFTAR"
                android:textSize="14sp"
                android:backgroundTint="@color/primary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>